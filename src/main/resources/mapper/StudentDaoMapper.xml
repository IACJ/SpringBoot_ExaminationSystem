<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="examination.dao.StudentDao">
    <select id="findByLogin" resultType="Student">
        SELECT * from student where account=#{account} and password=#{password}
    </select>

    <insert id="add">
        INSERT INTO student(account,name,sex,password,classid)
        VALUE(#{account},#{name},#{sex},'123456',#{classid});
    </insert>

    <select id="findById" resultType="Student">
        SELECT * from student where id=#{id}
    </select>

    <update id="update">
        UPDATE student set account=#{account},name=#{name},sex=#{sex}
        ,password=#{password},classid=#{classid} WHERE id=#{id}
    </update>

</mapper>